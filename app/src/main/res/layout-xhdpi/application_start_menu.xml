<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/start_menu_layout"
    android:background="@drawable/mainmenu">

    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:id="@+id/guild_info_button"
        android:background="@drawable/menu_cards"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:id="@+id/team_builder_button"
        android:layout_alignRight="@+id/guild_info_button"
        android:layout_below="@+id/guild_info_button"
        android:background="@drawable/menu_teams" />

    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:id="@+id/play_button"
        android:layout_alignRight="@+id/team_builder_button"
        android:layout_below="@+id/team_builder_button"
        android:background="@drawable/menu_play" />

    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:id="@+id/odds_button"
        android:layout_alignRight="@+id/team_builder_button"
        android:layout_below="@+id/play_button"
        android:background="@drawable/menu_odds" />

    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:id="@+id/timer_button"
        android:layout_alignRight="@+id/odds_button"
        android:layout_below="@+id/odds_button"
        android:background="@drawable/menu_timer" />




</RelativeLayout>

