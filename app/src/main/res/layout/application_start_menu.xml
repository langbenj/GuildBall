<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/start_menu_layout"
    android:background="@drawable/mainmenu">

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/guild_info_button"
        android:layout_marginBottom="125dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:background="@drawable/menu_cards" />
    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/team_builder_button"
        android:layout_alignTop="@+id/guild_info_button"
        android:layout_toRightOf="@+id/guild_info_button"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu_teams" />


    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/odds_button"
        android:layout_below="@+id/team_builder_button"
        android:layout_alignLeft="@+id/guild_info_button"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu_odds" />
    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/timer_button"
        android:layout_alignTop="@+id/odds_button"
        android:layout_toRightOf="@+id/odds_button"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu_timer" />

</RelativeLayout>