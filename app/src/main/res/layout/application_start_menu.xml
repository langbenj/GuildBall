<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/start_menu_layout"
    android:background="@drawable/mainmenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cards"
        android:id="@+id/guild_info_button"
        android:layout_marginBottom="125dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/team_builder_button"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/team_builder_button" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teams"
        android:id="@+id/team_builder_button"
        android:layout_alignTop="@+id/guild_info_button"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:id="@+id/timer_button"
        android:layout_alignTop="@+id/guild_info_button"
        android:layout_toRightOf="@+id/team_builder_button"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odds"
        android:id="@+id/odds_button"
        android:layout_below="@+id/team_builder_button"
        android:layout_alignLeft="@+id/guild_info_button"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Models"
        android:id="@+id/models_button"
        android:layout_alignTop="@+id/odds_button"
        android:layout_toRightOf="@+id/odds_button"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/share_button"
        android:layout_alignTop="@+id/odds_button"
        android:layout_toRightOf="@+id/models_button"
        android:layout_marginLeft="20dp" />


</RelativeLayout>