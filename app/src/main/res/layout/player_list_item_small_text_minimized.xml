<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_marginTop="5dp"

        android:id="@+id/player_list_logo_image"
        android:src="@drawable/brewers_logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/player_item_line_1"
        android:layout_toRightOf="@+id/player_list_logo_image"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="dasflkj"

        android:id="@+id/player_name_field"
        />


    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:layout_below="@+id/player_name_field"
        android:background="#FF909090"
        android:id="@+id/player_item_line_2"/>







</RelativeLayout>