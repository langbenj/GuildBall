<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_height="150dp"
        android:background="@drawable/title_team_builder"
        android:layout_width="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/team_builder_title"
        android:layout_alignParentTop="true" />


    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:layout_below="@+id/team_builder_title"
        android:background="#FF909090"
        android:id="@+id/team_builder_line_1" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Create a New Team"
        android:layout_centerHorizontal="true"
        android:id="@+id/create_new_team_button"
        android:layout_below="@+id/team_builder_line_1"
        android:background="#000000"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:layout_below="@+id/create_new_team_button"
        android:background="#FF909090"
        android:id="@+id/team_builder_line_2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Team to Play or Modify"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/team_builder_line_2"
        android:id="@+id/saved_team_list_title"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:layout_below="@+id/saved_team_list_title"
        android:background="#FF909090"
        android:id="@+id/team_builder_line_3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/team_builder_recycler"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/team_builder_line_3"/>




</RelativeLayout>

