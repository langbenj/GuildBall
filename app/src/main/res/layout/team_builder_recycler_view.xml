<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:text="Team Builder"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/team_builder_title"
    android:textStyle="bold"
    />

    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:layout_below="@+id/team_builder_title"
        android:background="#FF909090"
        android:id="@+id/team_builder_line_1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a New List"
        android:padding="5dp"

        android:id="@+id/create_new_team_button"
        android:layout_below="@+id/team_builder_line_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:background="#ececec"
        android:textSize="18sp" />

    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:layout_below="@+id/create_new_team_button"
        android:background="#FF909090"
        android:id="@+id/team_builder_line_2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Saved Team"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/team_builder_line_2"
        android:id="@+id/saved_team_list_title"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:layout_below="@+id/saved_team_list_title"
        android:background="#FF909090"
        android:id="@+id/team_builder_line_3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/team_builder_recycler"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/team_builder_line_3"/>




</RelativeLayout>

