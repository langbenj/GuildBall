        android:layout_alignLeft="@+id/team_construction_list_name"
        android:text="List Name:"
        android:id="@+id/team_construction_enter_list_name_prompt"
        android:textSize="14sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_toRightOf="@+id/team_construction_enter_list_name_prompt"
