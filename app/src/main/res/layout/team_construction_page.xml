        android:layout_alignTop="@+id/team_construction_enter_list_name_prompt"
        android:hint="Enter your list name here"
        android:id="@+id/new_list_name_edit_box"
        android:inputType="text"
        android:textSize="14sp"
        android:imeOptions="actionDone"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Set"
        android:id="@+id/list_title_set"
        android:layout_toRightOf="@+id/new_list_name_edit_box"
        android:layout_alignBottom="@+id/new_list_name_edit_box"

        android:layout_centerHorizontal="true" />



