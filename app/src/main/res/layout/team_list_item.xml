<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:paddingLeft="10dp"

        android:id="@+id/team_list_logo_image"
        android:src="@drawable/brewers_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_toRightOf="@id/team_list_logo_image"
        android:text="teamname"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/team_name_field"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />



    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:layout_below="@+id/team_name_field"
        android:background="#FF909090"
        android:id="@+id/view" />


</RelativeLayout>