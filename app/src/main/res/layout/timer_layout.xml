<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timer_background">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:text="Start"
        android:id="@+id/timer_button_1"
        android:layout_alignParentTop="true"
        android:textSize="48sp"
        android:backgroundTint="#90ededed" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/countdown1"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/timer_button_1"
        android:text="45:00"
        android:textColor="#ffffff"
        android:textSize="64dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/countdown2"
        android:layout_alignLeft="@+id/countdown1"
        android:layout_below="@+id/countdown1"
        android:text="45:00"
        android:textColor="#ffffff"
        android:textSize="64dp"
        android:background="#000000"
        android:layout_marginTop="30dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:text="Start"
        android:id="@+id/timer_button_2"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/countdown2"
        android:layout_alignParentBottom="true"
        android:textSize="48sp"
        android:backgroundTint="#90ededed" />


</RelativeLayout>