<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timer_background">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:text="Start"
        android:id="@+id/timer_button_1"
        android:layout_alignParentTop="true"
        android:textSize="48sp"
        android:backgroundTint="#90ededed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overtime"
        android:id="@+id/overtime1"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:textSize="18dp"
        android:layout_alignTop="@+id/countdown1"
        android:layout_toLeftOf="@+id/countdown1"
        android:layout_toStartOf="@+id/countdown1"
        android:visibility="invisible" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/countdown1"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/timer_button_1"
        android:text="45:00"
        android:textColor="#ffffff"
        android:textSize="64dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/time_value"
        android:layout_alignLeft="@+id/countdown1"
        android:layout_below="@+id/countdown1"
        android:text="45"

        android:textSize="16dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/set_time_button" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Set Clock"
        android:id="@+id/set_time_button"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/time_value"
        android:layout_below="@+id/countdown1"

        android:textSize="16sp"
        android:backgroundTint="#90ededed" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Pause"
        android:id="@+id/pause_button"
        android:layout_marginTop="7dp"
        android:layout_alignLeft="@+id/timer_button_1"
        android:layout_alignRight="@+id/timer_button_1"
        android:layout_below="@+id/countdown1"

        android:textSize="16sp"
        android:backgroundTint="#90ededed"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overtime"
        android:id="@+id/overtime2"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:textSize="18dp"
        android:layout_alignTop="@+id/countdown2"
        android:layout_toLeftOf="@+id/countdown2"
        android:layout_toStartOf="@+id/countdown2"
        android:visibility="invisible" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/countdown2"
        android:layout_alignLeft="@+id/countdown1"
        android:layout_below="@+id/set_time_button"
        android:text="45:00"
        android:textColor="#ffffff"
        android:textSize="64dp"
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:text="Start"
        android:id="@+id/timer_button_2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/countdown2"
        android:layout_alignParentBottom="true"
        android:textSize="48sp"
        android:backgroundTint="#90ededed" />




</RelativeLayout>